@model IEnumerable<AssingmentUsingDapper.Areas.Admin.Models.Medicine.Medicine>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped  table-bordered table-hover text-center">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Medicine_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Stock)
            </td>
            <td>
                    <span class="btn btn-warning">@Html.ActionLink("Edit", "Edit", new {  id=item.Id  })</span>   |

                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"onclick="return window.alert('Are you sure ??')" >Delete</a>
                  @*  <span class=" btn-danger"> @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })</span>*@
            </td>
        </tr>
}
    </tbody>
</table>
